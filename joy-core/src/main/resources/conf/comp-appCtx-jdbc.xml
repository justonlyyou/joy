<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">
	
	<!-- 业务库JDBC模版 -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource">
			<ref local="dataSource" />
		</property>
	</bean>
	
	<bean id="jdbcTool" class="com.kvc.joy.core.persistence.jdbc.support.utils.JdbcTool"/>

	<!-- 关系数据库表元数据加载服务 -->
	<bean id="mdRdbTableService" class="com.kvc.joy.core.persistence.jdbc.service.impl.MdRdbTableService" />
	
	<!-- 关系数据库表元数据缓存服务 -->
	<bean id="mdRdbTableCacheService" class="com.kvc.joy.core.persistence.jdbc.service.impl.MdRdbTableCacheService" 
		p:mdRdbTableService-ref="mdRdbTableService" >
	</bean>
	
	<!-- 关系数据库表字段元数据加载服务 -->
	<bean id="mdRdbColumnService" class="com.kvc.joy.core.persistence.jdbc.service.impl.MdRdbColumnService" />
	
	<!-- 关系数据库表字段元数据缓存服务 -->
	<bean id="mdRdbColumnCacheService" class="com.kvc.joy.core.persistence.jdbc.service.impl.MdRdbColumnCacheService" 
		p:mdRdbColumnService-ref="mdRdbColumnService" >
	</bean>
	
	<!-- 关系数据库表主键元数据加载服务 -->
	<bean id="mdRdbPrimaryKeyService" class="com.kvc.joy.core.persistence.jdbc.service.impl.MdRdbPrimaryKeyService" />
	
	<!-- 关系数据库表主键元数据缓存服务 -->
	<bean id="mdRdbPrimaryKeyCacheService" class="com.kvc.joy.core.persistence.jdbc.service.impl.MdRdbPrimaryKeyCacheService" 
		p:mdRdbPrimaryKeyService-ref="mdRdbPrimaryKeyService" >
	</bean>
	
	<!-- 关系数据库表结构反向同步服务 -->
	<bean id="mdRdbAlterReverseSyncService" class="com.kvc.joy.core.persistence.jdbc.service.impl.MdRdbAlterReverseSyncService" />
	
</beans>
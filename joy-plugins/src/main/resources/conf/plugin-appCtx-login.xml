<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

	<!-- 登陆服务 -->
	<bean id="loginService" class="com.kvc.joy.plugin.security.login.service.impl.LoginService" />
	
	<!-- 登陆日志服务 -->
	<bean id="loginLogService" class="com.kvc.joy.plugin.security.login.service.impl.LoginLogService" />
	
	<!-- 登出服务 -->
	<bean id="logoutService" class="com.kvc.joy.plugin.security.login.service.impl.LogoutService" />
	
	<!-- 登出日志服务 -->
	<bean id="logoutLogService" class="com.kvc.joy.plugin.security.login.service.impl.LogoutLogService" />
	
	<bean id="loginLogDao" class="com.kvc.joy.plugin.security.login.dao.LoginLogDao" />

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="testComet" class="com.kvc.comet.TestSocketHandler"/>

    <bean id="cometConfigMetadata" class="org.joy.plugin.message.comet.config.CometConfigMetadata">
        <property name="timeout" value="60000"></property>
        <property name="properties">
            <props>
                <prop key="objectFactory">org.joy.plugin.message.comet.support.SpringObjectFactory</prop>
            </props>
        </property>
        <property name="handlers">
            <props>
                <prop key="/test.comet">testComet</prop>
            </props>
        </property>
    </bean>

</beans>
